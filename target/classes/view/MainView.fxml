<HBox styleClass = "container" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@css/MainView.css"
      fx:controller="controller.MainController" spacing="20" VBox.vgrow = "ALWAYS" HBox.hgrow = "ALWAYS">
    <padding>
        <Insets top="20" right="10" bottom="20" left="10"/>
    </padding>
    <VBox styleClass = "sidebar" spacing = "10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <HBox fx:id = "dashboard" styleClass = "sidebar-item" alignment = "CENTER_LEFT" spacing = "10" onMouseClicked="#handleDashboardClick">
            <padding>
                <Insets left="10"/>
            </padding>  
            <ImageView fitHeight="35" fitWidth="35" preserveRatio="true">
                <Image url="@images/profile-icon.png"/> 
            </ImageView>
            <Label styleClass = "sidebar-item-content" text = "Dashboard"/>
        </HBox>
        <HBox fx:id = "dictionary" styleClass = "sidebar-item" alignment = "CENTER_LEFT" spacing = "10" onMouseClicked="#handleDictionaryClick">
            <padding>
                <Insets left="10"/>
            </padding> 
            <ImageView fitHeight="35" fitWidth="35" preserveRatio="true">
                <Image url="@images/dictionary.png"/> 
            </ImageView>
            <Label styleClass = "sidebar-item-content" text = "Dictionary"/>
        </HBox>
        <HBox fx:id = "game" styleClass = "sidebar-item" alignment = "CENTER_LEFT" spacing = "10" onMouseClicked="#handleDashboardClick">
            <padding>
                <Insets left="10"/>
            </padding> 
            <ImageView fitHeight="35" fitWidth="35" preserveRatio="true">
                <Image url="@images/profile-icon.png"/> 
            </ImageView>
            <Label styleClass = "sidebar-item-content" text = "Game"/>
        </HBox>
        <HBox fx:id = "thesaurus" styleClass = "sidebar-item" alignment = "CENTER_LEFT" spacing = "10" onMouseClicked="#handleThesaurusClick">
            <padding>
                <Insets left="10"/>
            </padding> 
            <ImageView fitHeight="35" fitWidth="35" preserveRatio="true">
                <Image url="@images/profile-icon.png"/> 
            </ImageView>
            <Label styleClass = "sidebar-item-content" text = "Thesaurus"/>
        </HBox>
        <HBox fx:id = "translate" styleClass = "sidebar-item" alignment = "CENTER_LEFT" spacing = "10" onMouseClicked="#handleDashboardClick">
            <padding>
                <Insets left="10"/>
            </padding> 
            <ImageView fitHeight="35" fitWidth="35" preserveRatio="true">
                <Image url="@images/translate.png"/> 
            </ImageView>
            <Label styleClass = "sidebar-item-content" text = "Translate"/>
        </HBox>
    </VBox>
    <VBox styleClass = "display-area-container" fx:id = "displayAreaContainer" VBox.vgrow = "ALWAYS" HBox.hgrow = "ALWAYS">
        <ScrollPane fx:id = "displayArea" styleClass = "dashboard" HBox.hgrow = "ALWAYS" fitToWidth="true">
        <!-- View add here -->
        </ScrollPane>
    </VBox>
